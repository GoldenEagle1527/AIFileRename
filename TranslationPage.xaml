<Page x:Class="AIFileRename.TranslationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AIFileRename"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TranslationPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" x:Name="Mask" Background="Gray" Opacity="0.5" Visibility="Hidden">
            <TextBlock x:Name="ProgressText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
        </Grid>
        <TextBox IsHitTestVisible="False" IsReadOnly="True" Background="Transparent" BorderThickness="0,0,0,0" Grid.Row="0" x:Name="BackgroundTip" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Text="请将文件拖入,右键删除选中文件" />
        <Grid Grid.Row="0">
            <DataGrid x:Name="FileList" AutoGenerateColumns="False"  AllowDrop="True" Drop="FileList_Drop" MouseUp="RemoveSelectItem">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="源文件" Binding="{Binding OriginalFileName}" Width="*" />
                    <DataGridTextColumn Header="重命名" Binding="{Binding RenamedFileName}"  Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="64" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Name="StartButton" Content="重命名" HorizontalAlignment="Center" Click="StartButton_Click" />
            <TextBox Grid.Column="0" Name="Prompt" TextWrapping="Wrap" Text="英译中" TextAlignment="Center" KeyDown="Prompt_KeyDown" />
        </Grid>
    </Grid>
</Page>