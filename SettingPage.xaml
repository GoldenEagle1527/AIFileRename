<Page x:Class="AIFileRename.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AIFileRename"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox IsHitTestVisible="False" IsReadOnly="True" Background="Transparent" BorderThickness="0,0,0,0" Grid.Column="0" Text="Api Key" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBox x:Name="ApiKeyInput" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="256"  Text="ollama" BorderThickness="0,0,0,0" />
                <Border BorderBrush="DarkGray" Grid.ColumnSpan="2" BorderThickness="0,0,0,1" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox IsHitTestVisible="False" IsReadOnly="True" Background="Transparent" BorderThickness="0,0,0,0" Grid.Column="0" Text="模型名称" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBox x:Name="ModelNameInput" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="256"  Text="gemma2:9b" BorderThickness="0,0,0,0" />
                <Border BorderBrush="DarkGray" Grid.ColumnSpan="2" BorderThickness="0,0,0,1" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox IsHitTestVisible="False" IsReadOnly="True" Background="Transparent" BorderThickness="0,0,0,0" Grid.Column="0" Text="OpenAI兼容Url" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBox x:Name="UrlInput" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="256"  Text="http://localhost:11434/v1" BorderThickness="0,0,0,0" />
                <Border BorderBrush="DarkGray" Grid.ColumnSpan="2" BorderThickness="0,0,0,1" />
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox IsHitTestVisible="False" IsReadOnly="True" Background="Transparent" BorderThickness="0,0,0,0" Grid.Column="0" Text="角色描述" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBox x:Name="SystemPromptInput" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Height="auto" Width="256"  Text="你是一个AI文件重命名助手,请你完全根据用户的需求进行工作,只输出结果,严禁输出任何其他东西,诸如解释词,指向词等无关文件名的词语" BorderThickness="0,0,0,0" TextWrapping="WrapWithOverflow" />
                <Border BorderBrush="DarkGray" Grid.ColumnSpan="2" BorderThickness="0,0,0,1" />
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1">
            <Button Name="SaveButton" Content="保存" HorizontalAlignment="Right" Click="SaveButton_Click" />
        </Grid>
    </Grid>
</Page>